name: Deploy Frontend to Azure App Service

on:
  push:
    branches:
      - main
    paths:
      - "frontend/**"

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Install dependencies
        run: npm install
      - name: Build
        run: npm run build
        env:
          VITE_BASE_URL: ${{ secrets.PRODUCTION_BASE_URL }}
